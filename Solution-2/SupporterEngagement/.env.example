# AWS Configuration
AWS_REGION=eu-west-2
AWS_ACCOUNT_ID=your-account-id

# DynamoDB Tables
DYNAMODB_USER_PROFILES_TABLE=supporter-engagement-user-profiles
DYNAMODB_CONTEXT_TABLE=supporter-engagement-context
DYNAMODB_ENGAGEMENT_TABLE=supporter-engagement-engagement
DYNAMODB_ANALYTICS_TABLE=supporter-engagement-analytics

# RDS PostgreSQL
RDS_HOST=your-rds-endpoint
RDS_PORT=5432
RDS_DATABASE=supporter_engagement
RDS_USERNAME=admin
RDS_PASSWORD=your-password

# ElastiCache Redis
REDIS_HOST=your-redis-endpoint
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# S3 Buckets
S3_RESEARCH_PAPERS_BUCKET=supporter-engagement-research-papers
S3_CONTENT_BUCKET=supporter-engagement-content

# Cognito
COGNITO_USER_POOL_ID=your-user-pool-id
COGNITO_CLIENT_ID=your-client-id

# Amazon Bedrock
BEDROCK_MODEL_ID=anthropic.claude-3-5-sonnet-20241022-v2:0
BEDROCK_REGION=us-east-1

# API Gateway
API_GATEWAY_URL=https://your-api-id.execute-api.eu-west-2.amazonaws.com
WEBSOCKET_API_URL=wss://your-websocket-id.execute-api.eu-west-2.amazonaws.com

# Cache TTL (in seconds)
CACHE_TTL_USER_PROFILE=300
CACHE_TTL_RESEARCH_PAPERS=3600
CACHE_TTL_KNOWLEDGE_ARTICLES=3600

# Performance
MAX_RESPONSE_TIME_MS=2000
MAX_RETRY_ATTEMPTS=3
CIRCUIT_BREAKER_THRESHOLD=5

# Logging
LOG_LEVEL=info
ENABLE_XRAY_TRACING=true
